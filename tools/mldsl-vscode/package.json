{
  "name": "mldsl-helper",
  "displayName": "MLDSL Helper",
  "description": "Completion/hover/definition for MLDSL based on generated api_aliases.json",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mldsl",
    "onCommand:mldsl.reloadApi",
    "onCommand:mldsl.smartInsertMenu",
    "onCommand:mldsl.compileAndCopy",
    "onCommand:mldsl.compilePlan",
    "onCommand:mldsl.publishModule"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mldsl",
        "aliases": [
          "MLDSL"
        ],
        "extensions": [
          ".mldsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mldsl",
        "scopeName": "source.mldsl",
        "path": "./syntaxes/mldsl.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "MLDSL Helper",
      "properties": {
        "mldsl.apiAliasesPath": {
          "type": "string",
          "default": "C:\\\\Users\\\\ASUS\\\\AppData\\\\Local\\\\MLDSL\\\\out\\\\api_aliases.json",
          "description": "Path to generated api_aliases.json"
        },
        "mldsl.docsRoot": {
          "type": "string",
          "default": "C:\\\\Users\\\\ASUS\\\\AppData\\\\Local\\\\MLDSL\\\\out\\\\docs",
          "description": "Root folder with generated markdown docs"
        },
        "mldsl.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Python executable path for running compiler .py scripts (optional)"
        },
        "mldsl.compilerPath": {
          "type": "string",
          "default": "",
          "description": "Path to mldsl.exe or mldsl_compile.py (optional; auto-detected when empty)"
        }
      }
    },
    "commands": [
      {
        "command": "mldsl.reloadApi",
        "title": "MLDSL: Reload API"
      },
      {
        "command": "mldsl.smartInsertMenu",
        "title": "MLDSL: Guided Insert"
      },
      {
        "command": "mldsl.compileAndCopy",
        "title": "MLDSL: Compile And Copy"
      },
      {
        "command": "mldsl.compilePlan",
        "title": "MLDSL: Compile To plan.json"
      },
      {
        "command": "mldsl.publishModule",
        "title": "MLDSL: Prepare Publish Bundle"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mldsl.reloadApi"
        },
        {
          "command": "mldsl.smartInsertMenu"
        },
        {
          "command": "mldsl.compileAndCopy"
        },
        {
          "command": "mldsl.compilePlan"
        },
        {
          "command": "mldsl.publishModule"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mldsl.smartInsertMenu",
        "key": "alt+enter",
        "when": "editorTextFocus && editorLangId == mldsl"
      }
    ]
  }
}

